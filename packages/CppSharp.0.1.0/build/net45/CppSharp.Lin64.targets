<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CopyNativeDLLs" AfterTargets="AfterBuild">
    <CreateItem Include="$(MSBuildThisFileDirectory)\*.so">
      <Output TaskParameter="Include" ItemName="NativeSOs" />
    </CreateItem>
    <Copy SourceFiles="@(NativeDLLs)" DestinationFiles="@(NativeDLLs->'$(OutDir)\%(RecursiveDir)%(Filename).so')" />
  </Target>
</Project>

